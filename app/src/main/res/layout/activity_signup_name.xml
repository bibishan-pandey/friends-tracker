<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context=".activities.SignupNameActivity">

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/icon_profile"
        app:civ_border_color="#FF000000"
        app:civ_border_overlay="true"
        app:civ_border_width="5dp" />

    <EditText
        android:id="@+id/signup_name_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:ems="10"
        android:gravity="center"
        android:hint="Enter your name"
        android:inputType="textEmailAddress"
        android:padding="17dp"
        android:textSize="18sp"
        android:layout_alignParentLeft="true" />


    <Button
        android:id="@+id/signup_name_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/button_shape_signin"
        android:onClick="generateCode"
        android:text="Sign Up Next"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signup_name_edittext"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp"
        android:text="This is how you'll appear on your map"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/addPhotoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/signup_name_edittext"
        android:layout_centerHorizontal="true"
        android:onClick="openGallery"
        android:text="Add photo" />




</RelativeLayout>
